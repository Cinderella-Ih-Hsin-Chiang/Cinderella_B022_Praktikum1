#include <iostream>
#include <cmath>
using namespace std;
int main()
  {
    int i, n, data[50];
    float rata,jum,sigma;
    
    cout<<"Masukan Banyaknya Data = ";
    cin>>n;
    cout<<endl;
    
    for (i=0; i<n; i++)
        {
           cout<<"Data ["<<i+1<<"] = ";
           cin>>data[i];
           jum += data[i];
        }
        
    rata=jum/n;
    sigma = sigma+sqrt(data[i]-rata);
        
    cout<<endl;
    
    cout<<"Masukan banyaknya Data : "<<n<<endl;
    cout<<"Rata - rata : "<< rata <<endl;
    cout<<"Jumlah : "<< jum <<endl;
    cout<<"Sd : " << sigma <<endl;
    
	
  getc;
 
    
  }
